<!--pages/index/index.wxml-->
<view class="container">

  <view class="login-icon">
    <image class="login-img" src="../../image/loginLog.jpg"></image>
  </view>
  <view class="login-from">
    <!--账号-->
    <view class="inputView">
      <image class="nameImage" src="../../image/name.png"></image>
      <input class="inputText" placeholder="请输入用户名" bindinput="getName" />
    </view>
    <view class="line"></view>

    <!--账号-->
    <view class="inputView">
      <image class="nameImage" src="../../image/name.png"></image>
      <input class="inputText" placeholder="请输入账号" bindinput="getZhangHao" />
    </view>
    <view class="line"></view>

    <!--密码-->
    <view class="inputView">
      <image class="keyImage" src="../../image/key.png"></image>
      <input class="inputText" password="true" placeholder="请输入密码" bindinput="getMiMa" />
    </view>

    <!--按钮-->
    <view class="loginBtnView">
      <button bindtap="register" type="primary">注册</button>
    </view>
  </view>
</view>