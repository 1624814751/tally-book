  color: #fff;
}
/* 白色内容样式 */
.contentBox{
  background-color: #fff;
}
.priceBox{
  padding: 0 20rpx;
}
.priceBox input{
  font-size: 60rpx;
  height: 90rpx;
  line-height: 90rpx;
}
/* 轮播图样式 */
.iconSwiper{
  height: 400rpx;
}
.iconBox{
  padding: 0 20rpx;
}
/* 单个图标样式 */
.iconItem{
  width: 25%;
  margin-top: 20rpx;
}
.iconItem .iconImg{
  width: 100rpx;
  height: 100rpx;
  margin: 0 auto;
}
.iconItem .iconImg image{
  width: 100%;
  height: 100%;
}
.iconItem .iconTitle{
  text-align: center;
  font-size: 24rpx;
  color: #999;
}
/* 激活的图标样式 */
.iconBox .active{
  box-shadow: 0 0 10rpx 5rpx #e0e0e0;
}
.iconBox .active .iconImg{
  transform:scale(1.2); /*缩放属性，参数：倍数<1 ：缩小>1：放大*/
}
.iconBox .active .iconTitle{
  color:#000;
  font-weight: bold;
}
/* 日期 备注样式 */
.infoBox{
  padding: 0 20rpx;
}
.infoBox .infoItem{
  display: flex;
  align-items: center;
  margin-top: 30rpx;
  color: #999;
}
.infoBox .infoItem .iconfont{
  margin-right: 20rpx;
  font-weight: bold;
}