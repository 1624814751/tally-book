/* miniprogram/pages/record/record.wxss */
pages{
  background-color: #999;
}
/* 头部样式 */
.header{
  background-color: #26b592;
  padding: 20rpx 0;
  position: relative;
}
.header .headerBox{
  width: 300rpx;
  height: 80rpx;
  border: 1px solid #fff;
  margin: 0 auto;
  display: flex;
  border-radius: 30rpx;
  overflow: hidden;
}
.header .headerBox .headerItem{
  width: 50%;
  text-align: center;
  line-height: 80rpx;
  color: #fff;
}
/* 收入支出按钮激活高亮样式 */
.header .headerBox .active{
  background-color: #fff;
  color: #26b592;
}
/* 保存按钮的样式 */
.header .saveBtn{
  position: absolute;
  top: 50%;
  right: 30rpx;
  margin-top: -40rpx;
  height: 80rpx;
  line-height: 80rpx;
  color: #fff;
}
